@using Pertemuan4.Models

@{
    ViewBag.Title = "Peminjaman Rental Buku";
}

@model Pertemuan4.Models.BookViews


<h2>Book List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nama</th>
            <th>NPM</th>
            <th>Jumlah Buku</th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (var loan in Model.loans)
    {

        <tbody>
            <tr>
                <td>@loan.IdLoan</td>
                <td>@loan.nama</td>
                <td>@loan.npm</td>
                <td>@loan.books.Count()</td>
                <td><button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal@(@loan.IdLoan)">
                        Lihat Detail
                    </button>
                </td>

            </tr>
        </tbody>
    }
</table>

<hr />



@foreach (var loan in Model.loans)
{

    <!-- Modal -->
    <div class="modal fade" id="myModal@(@loan.IdLoan)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
<div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Detail Peminjaman Nomor <b>@loan.IdLoan</b></h4>
                </div>
                <div class="modal-body">
                    <table class="table">
                        
                        <tbody>
                            <tr>
                                <th>Nama Peminjam</th>
                                <td>@loan.nama</td>
                            </tr>
                            <tr>
                                <th>NPM</th>
                                <td>@loan.npm</td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table">
                        <thead>
                            <th>Judul Buku</th>
                            <th>Harga</th>
                        </thead>
                        <tbody>
                            @{var count = 0;}
                            @foreach (var book in loan.books)
                                {
                                    <tr>
                                        <td>
                                            @book.Judul;
                                        </td>
                                        <td>@book.Price;</td>
                                    </tr>
                                    count+=book.Price;
                                }
                              <tr>
                                  <th>Total Price</th>
                                  <td colspan="2">@count</td>
                              </tr>  
                                
                        </tbody>
                    </table>
                </div>
              
            </div>
        </div>
    </div>
}